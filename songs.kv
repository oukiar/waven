
#:import ScrollBox devslib.scrollbox

<SongItem>:
    height: 100
    
    pista:pista
    artista:artista
    duracion:duracion
    
    
    RelativeLayout:
        Button:
            background_color: app.root.fgcolor
            background_normal: ""
        
        BoxLayout:
            BoxLayout:
                orientation: "vertical"
                padding: 10
                Label:
                    text: "Titulo de cancion"
                    text_size: self.width, None
                    size: self.texture_size
                    font_size: 20
                    id: pista
                    
                Label:
                    text: "Artista"
                    text_size: self.width, None
                    size: self.texture_size
                    id: artista
            
            Label:
                size_hint_x: None
                text: "0:00"
                id: duracion
            
        

<Songs>:
    items:items
    padding: 10
    ScrollBox:
        orientation: "vertical"
        spacing: 2
        id: items
        
